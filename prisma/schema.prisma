// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(uuid())
  email   String   @unique
  name    String
  given_name String
  locale String
  picture String
  verified_email Boolean

  habits Habit[]
  days Day[]
  dayHabits DayHabit[]

  @@map("users")
}

model Habit {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime

  dayHabits DayHabit[]
  weekDays  HabitWeekDays[]
  user_id  String

  user      User      @relation(fields: [user_id], references: [id])

  @@unique([id, user_id])

  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int

  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id   String   @id @default(uuid())
  date DateTime

  dayHabits DayHabit[]
  user_id String

  user      User      @relation(fields: [user_id], references: [id])

  @@unique([date, user_id])
  @@map("days")
}

model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String
  user_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])
  user      User      @relation(fields: [user_id], references: [id])

  @@unique([day_id, habit_id, user_id])
  @@map("day_habits")
}

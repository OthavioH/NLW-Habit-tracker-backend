model User {
  id             String     @id @default(uuid())
  email          String     @unique
  name           String
  given_name     String
  locale         String
  picture        String
  verified_email Boolean
  dayHabits      DayHabit[]
  days           Day[]
  habits         Habit[]

  @@map("users")
}

model Habit {
  id         String          @id @default(uuid())
  title      String
  created_at DateTime
  user_id    String
  dayHabits  DayHabit[]
  weekDays   HabitWeekDays[]
  user       User            @relation(fields: [user_id], references: [id])

  @@unique([id, user_id])
  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int
  habit    Habit  @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id        String     @id @default(uuid())
  date      DateTime
  user_id   String
  dayHabits DayHabit[]
  user      User       @relation(fields: [user_id], references: [id])

  @@unique([date, user_id])
  @@map("days")
}

model DayHabit {
  id       String @id @default(uuid())
  day_id   String
  habit_id String
  user_id  String
  day      Day    @relation(fields: [day_id], references: [id])
  habit    Habit  @relation(fields: [habit_id], references: [id])
  user     User   @relation(fields: [user_id], references: [id])

  @@unique([day_id, habit_id, user_id])
  @@map("day_habits")
}
